
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Channel {
  id        String        @id @default(cuid())
  serverId  String
  name      String
  type      ChannelType
  createdAt DateTime       @default(now())

  server    Server         @relation(fields: [serverId], references: [id])
}

enum ChannelType {
  TEXT
  VOICE
}


// prisma/modules/password-reset.prisma

model PasswordResetToken {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  tokenHash String
  expiresAt DateTime
  used      Boolean  @default(false)

  createdAt DateTime @default(now())
}


model Server {
  id        String       @id @default(cuid())
  name      String
  teamId    String
  type      ServerType
  createdAt DateTime     @default(now())

  team      Team         @relation(fields: [teamId], references: [id])
  channels  Channel[]
}

enum ServerType {
  TEXT
  VOICE
}


model Team {
  id        String       @id @default(cuid())
  name      String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  // Relations
  members   TeamMember[]
  roles     TeamRole[]
  servers   Server[]
}


model TeamMember {
  id        String     @id @default(cuid())

  userId    String
  teamId    String
  roleId    String?

  // Relations
  user      User       @relation(fields: [userId], references: [id])
  team      Team       @relation(fields: [teamId], references: [id])
  role      TeamRole?  @relation(fields: [roleId], references: [id])

  createdAt DateTime   @default(now())

  @@unique([userId, teamId]) // prevents duplicates
}


model TeamRole {
  id        String     @id @default(cuid())
  teamId    String
  name      String
  isDefault Boolean     @default(false)

  team        Team             @relation(fields: [teamId], references: [id])
  permissions RolePermission[]
  members     TeamMember[]
}

model RolePermission {
  id          String          @id @default(cuid())
  roleId      String
  permission  PermissionEnum

  role        TeamRole        @relation(fields: [roleId], references: [id])
}

enum PermissionEnum {
  CREATE_SERVER
  DELETE_SERVER
  MANAGE_ROLES
  MANAGE_MEMBERS
  SEND_MESSAGES
  MANAGE_CHANNELS
  START_VOICE
}


// prisma/modules/user.prisma

model User {
  id          String        @id @default(cuid())
  email       String        @unique
  password    String
  name        String?

  username      String?       @unique
  avatarUrl     String?       // âœ… URL to the avatar image
  timezone      String        @default("Etc/UTC")
  emailVerified Boolean       @default(false)
  settings      Json          @default("{}")

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  memberships TeamMember[]
  passwordResetTokens PasswordResetToken[]
}

